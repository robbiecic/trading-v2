{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "rootDir": "./src-ts",
    "outDir": "./built",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src-ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
